{
  "name": "@alphayou/codestyle-monorepo",
  "private": true,
  "type": "module",
  "version": "0.7.7",
  "description": "Alpha You's ESLint preset monorepo",
  "author": "Amano Fuon <amanofuon@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "pnpm -r run build",
    "dev": "pnpm eslint-config-inspector",
    "lint": "eslint . --cache --flag unstable_ts_config",
    "lint:fix": "eslint . --cache --fix --flag unstable_ts_config",
    "deps": "taze -r",
    "deps:w": "taze -r -w",
    "next": "bumpp -r --no-push"
  },
  "devDependencies": {
    "@alphayou/cs": "workspace:*",
    "@eslint/config-inspector": "^0.5.4",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.6.1",
    "bumpp": "^9.5.2",
    "changelogithub": "^0.13.10",
    "consola": "^3.2.3",
    "eslint": "^9.11.1",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.10",
    "pnpm": "^9.11.0",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.9",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix --flag unstable_ts_config"
  }
}
